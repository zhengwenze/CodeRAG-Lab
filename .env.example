# CodeRAG Lab 环境变量配置
# 复制此文件为 .env 并修改配置

# ============== 服务配置 ==============
PROJECT_NAME=CodeRAG Lab
ENVIRONMENT=production
DEBUG=False
API_HOST=0.0.0.0
API_PORT=8000

# ============== 向量存储配置 ==============
VECTOR_STORE=qdrant

# Qdrant 配置
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=coderag

# PostgreSQL + pgvector 配置
PGVECTOR_ENABLED=true
PGVECTOR_CONNECTION_STRING=postgresql://coderag:coderag123@postgres:5432/coderag

# ============== Embedding 模型配置 ==============
EMBEDDING_MODEL=bge-small
EMBEDDING_DIM=384
EMBEDDING_DEVICE=cpu

# 可选: 使用其他 Embedding 模型
# EMBEDDING_MODEL=zhipu
# EMBEDDING_MODEL=openai

# ============== LLM 配置 ==============
LLM_PROVIDER=llamacpp
LLAMACPP_HOST=llamacpp
LLAMACPP_PORT=8080
LLAMACPP_MODEL_PATH=/models/model.gguf

# ============== 检索增强配置 ==============
ENABLE_FULLTEXT=false
ENABLE_LLM_RERANK=false
TOP_K=5
MIN_SIMILARITY=0.0
VECTOR_WEIGHT=0.5
FULLTEXT_WEIGHT=0.5

# ============== 分块配置 ==============
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# ============== 日志配置 ==============
LOG_LEVEL=INFO
LOG_FILE=logs/coderag.log

# ============== 数据目录 ==============
DATA_DIR=data
